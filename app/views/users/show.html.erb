<h1 class="page-header">Profile Page</h1>

  <div id="review-list" class="row">
    <div class="col s12 m5">
      <div class="card-panel teal">
          <ul>
            <% if @user.reviews.length > 0 && @user.id == session[:user_id] %>
              <h5>Your Reviews</h4>
              <% @user.reviews.each do |review| %>
                <li class="white-text"><%= link_to review.title, film_path(review.film) %></li>
              <% end %>
            <% end %>
          </ul>
      </div>
    </div>
  </div>

  <div id="welcome-block" class="row">
    <div class="col s12 m5">
      <div class="card-panel">
       <h6>Welcome back, <%= @user.username %>.<h6>
       <p>Email: <%= @user.email %> </p>
       <p>Member since <%= @user.created_at.month %>/<%= @user.created_at.year %></p>
      </div>
    </div>
  </div>